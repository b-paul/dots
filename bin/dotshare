#! /usr/bin/env bash

set -e

SOURCE=$BASH_SOURCE
while [ -h $SOURCE ]; do
  NEW_SOURCE="$(readlink $SOURCE)"
  [[ $NEW_SOURCE != /* ]] && NEW_SOURCE="$(dirname $SOURCE)/$NEW_SOURCE"
  SOURCE=$NEW_SOURCE
done

cd "$(dirname $SOURCE)"
cd "$(git rev-parse --show-toplevel)"

git add . && git commit -m "dotfiles as of $(date)" && git push

