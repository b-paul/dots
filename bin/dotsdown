#! /usr/bin/env bash

SOURCE=$BASH_SOURCE
while [ -h $SOURCE ]; do
  NEW_SOURCE=$(readlink $SOURCE)
  [[ $NEW_SOURCE != /* ]] && NEW_SOURCE=$(dirname $SOURCE)/$NEW_SOURCE
  SOURCE=$NEW_SOURCE
done

cd "$(dirname $SOURCE)"
cd "$(git rev-parse --show-toplevel)"

unlink "$HOME/.gitconfig"
for file in $(git ls-tree -r HEAD --name-only); do
  unlink "$HOME/$file"
done

